blueprint:
  name: ZBMINIR2 detached relay mode
  description: Configure ZBMINIR2 as a light switch where toggling the switch will not toggle the relay, but instead trigger smart bulbs.
  domain: automation
  homeassistant:
    min_version: 2025.2.4

  input:
    zbminir2_device:
      name: ZBMINIR2 device
      description: ZBMINIR2 relay for turning the extractor fan on and off.
      selector:
        device:
          filter:
            - manufacturer: SONOFF
              model: Zigbee smart switch (ZBMINIR2)
            - manufacturer: SONOFF
              model: Zigbee smart switch
          multiple: false

    light:
      name: Light
      description: Light that when activated will trigger the extractor fan running.
      selector:
        entity:
          filter:
            domain: light
          multiple: false

triggers:
  - entity_id: !input "light_group"
    trigger: state

variables:
  zbminir2_device: !input "zbminir2_device"
  zbminir2_switch: "{{ device_entities(zbminir2_device)[0] }}"
  light: !input "light"

actions:
  - choose:
      - conditions:
          - alias: "Light is off"
            condition: template
            value_template: "{{ states(light) == 'off' }}"
        sequence:
          - service: switch.turn_off
              target:
              entity_id: "{{ zbminir2_switch }}"
      - conditions:
          - alias: "Light is on"
            condition: template
            value_template: "{{ states(zbminir2) == 'on' }}"
        sequence:
          - service: switch.turn_on
            target:
            entity_id: "{{ zbminir2_switch }}"

mode: single
